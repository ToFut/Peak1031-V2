# ===========================================
# ENVIRONMENT VARIABLES FOR DATABASE SETUP
# Copy this file to .env and fill in your values
# ===========================================

# Supabase Configuration (Required)
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_KEY=your_supabase_service_key

# PracticePanther OAuth Configuration (Required for sync)
PRACTICE_PANTHER_CLIENT_ID=your_pp_client_id
PRACTICE_PANTHER_CLIENT_SECRET=your_pp_client_secret

# JWT Configuration (Required for backend)
JWT_SECRET=your_jwt_secret_key_minimum_32_characters

# Optional Configuration
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Email Configuration (Optional - for notifications)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@peak1031.com

# SMS Configuration (Optional - for notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# AWS S3 Configuration (Optional - for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=your_s3_bucket_name

# Database Setup Options
SETUP_SKIP_SYNC=false
SETUP_VERBOSE=false